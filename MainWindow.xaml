<Window x:Class="CarList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarList"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="600" MinHeight="280" MinWidth="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "150"/>
            <RowDefinition Height = "*"/>
            <RowDefinition Height = "40"/>
        </Grid.RowDefinitions>
        <Label Content="Make:" HorizontalAlignment="Left" Margin="93,10,0,0" VerticalAlignment="Top" Grid.Row="0"/>
        <Label Content="Model:" HorizontalAlignment="Left" Margin="88,36,0,0" VerticalAlignment="Top" Grid.Row="0"/>
        <Label Content="Year:" HorizontalAlignment="Left" Margin="100,62,0,0" VerticalAlignment="Top" Grid.Row="0"/>
        <Label Content="Price:" HorizontalAlignment="Left" Margin="96,88,0,0" VerticalAlignment="Top" Grid.Row="0" RenderTransformOrigin="0.505,1.479"/>
        <Label Content="New:" HorizontalAlignment="Left" Margin="98,113,0,0" VerticalAlignment="Top" Grid.Row="0"/>
        <ComboBox x:Name="comboBoxMake" HorizontalAlignment="Left" Margin="164,14,0,0" VerticalAlignment="Top" Width="120" Grid.Row="0">
            <ComboBoxItem>Toyota</ComboBoxItem>
            <ComboBoxItem>Honda</ComboBoxItem>
            <ComboBoxItem>Ford</ComboBoxItem>
            <ComboBoxItem>Kia</ComboBoxItem>
            <ComboBoxItem>Hyundai</ComboBoxItem>
            <ComboBoxItem>Chevy</ComboBoxItem>
            <ComboBoxItem>Chrysler</ComboBoxItem>
            <ComboBoxItem>Jeep</ComboBoxItem>
            <ComboBoxItem>Ram</ComboBoxItem>
            <ComboBoxItem>Fiat</ComboBoxItem>
        </ComboBox>
        <TextBox x:Name="txtModel" HorizontalAlignment="Left" Margin="164,41,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Row="0"/>
        <ComboBox x:Name="comboBoxYear" HorizontalAlignment="Left" Margin="164,64,0,0" VerticalAlignment="Top" Width="120" Grid.Row="0"/>
        <TextBox x:Name="txtPrice" HorizontalAlignment="Left" Margin="164,90,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Row="0"/>
        <CheckBox x:Name="checkBoxNew" HorizontalAlignment="Left" Margin="164,118,0,0" VerticalAlignment="Top" Grid.Row="0"/>


        <DataGrid x:Name="carsList" Grid.Row="1" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="New" Binding="{Binding IsNew}" Width="40*"/>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="30*"/>
                <DataGridTextColumn Header="Make" Binding="{Binding Make}" Width="100*"/>
                <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="100*"/>
                <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="40*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="60*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Exit" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Row="2" VerticalAlignment="Center" Width="40"/>
        <Button Content="Reset" HorizontalAlignment="Right" Margin="0,0,60,0" Grid.Row="2" VerticalAlignment="Center" Width="40"/>
        <Button Content="Enter" HorizontalAlignment="Right" Margin="0,0,110,0" Grid.Row="2" VerticalAlignment="Center" Width="40"/>
    </Grid>
</Window>
