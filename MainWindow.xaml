<Window x:Class="CarList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarList"
        mc:Ignorable="d"
        Title="CarList" Height="520" Width="600" MinHeight="520" MinWidth="380">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "*"/>
            <RowDefinition Height = "60"/>
            <RowDefinition Height = "40"/>
        </Grid.RowDefinitions>
        <TabControl>
            <TabItem Header="_Add Vehicles">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height = "*"/>
                        <RowDefinition Height = "40"/>
                    </Grid.RowDefinitions>

                    <Label Content="_Make:" HorizontalAlignment="Left" Margin="93,25,0,0" VerticalAlignment="Top" Grid.Row="0" Target="{Binding ElementName=comboBoxMake}"/>
                    <Label Content="Mode_l:" HorizontalAlignment="Left" Margin="88,66,0,0" VerticalAlignment="Top" Grid.Row="0" Target="{Binding ElementName=txtModel}"/>
                    <Label Content="_Year:" HorizontalAlignment="Left" Margin="100,107,0,0" VerticalAlignment="Top" Grid.Row="0" Target="{Binding ElementName=comboBoxYear}"/>
                    <Label Content="_Price:" HorizontalAlignment="Left" Margin="96,148,0,0" VerticalAlignment="Top" Grid.Row="0" RenderTransformOrigin="0.505,1.479" Target="{Binding ElementName=txtPrice}"/>
                    <Label Content="_Type:" HorizontalAlignment="Left" Margin="98,188,0,0" VerticalAlignment="Top" Grid.Row="0" Target="{Binding ElementName=comboBoxType}"/>
                    <Label Content="_New:" HorizontalAlignment="Left" Margin="98,228,0,0" VerticalAlignment="Top" Grid.Row="0" Target="{Binding ElementName=checkBoxNew}"/>
                    <Label x:Name="labelHandleBarHeight" Content="_Handle Bar Height:" HorizontalAlignment="Left" Margin="98,268,0,0" VerticalAlignment="Top" Grid.Row="0" Target="{Binding ElementName=txtHandleBarHeight}" Visibility="Hidden"/>
                    <Label x:Name="labelIsElectric" Content="Ele_ctric:" HorizontalAlignment="Left" Margin="98,268,0,0" VerticalAlignment="Top" Grid.Row="0" Target="{Binding ElementName=checkBoxIsElectric}"/>
                    <ComboBox x:Name="comboBoxMake" HorizontalAlignment="Left" Margin="224,29,0,0" VerticalAlignment="Top" Width="120" Grid.Row="0" ToolTip="Choose the make of the vehicle">
                        <ComboBoxItem>Toyota</ComboBoxItem>
                        <ComboBoxItem>Honda</ComboBoxItem>
                        <ComboBoxItem>Ford</ComboBoxItem>
                        <ComboBoxItem>Kia</ComboBoxItem>
                        <ComboBoxItem>Hyundai</ComboBoxItem>
                        <ComboBoxItem>Chevy</ComboBoxItem>
                        <ComboBoxItem>Chrysler</ComboBoxItem>
                        <ComboBoxItem>Jeep</ComboBoxItem>
                        <ComboBoxItem>Ram</ComboBoxItem>
                        <ComboBoxItem>Fiat</ComboBoxItem>
                    </ComboBox>
                    <TextBox x:Name="txtModel" HorizontalAlignment="Left" Margin="224,71,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Row="0" ToolTip="Enter the model of the vehicle"/>
                    <ComboBox x:Name="comboBoxYear" HorizontalAlignment="Left" Margin="224,109,0,0" VerticalAlignment="Top" Width="120" Grid.Row="0" ToolTip="Choose the year of the vehicle"/>
                    <TextBox x:Name="txtPrice" HorizontalAlignment="Left" Margin="224,150,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Row="0" ToolTip="Enter the price of the vehicle"/>
                    <ComboBox x:Name="comboBoxType" SelectedIndex="0" HorizontalAlignment="Left" Margin="224,191,0,0" VerticalAlignment="Top" Width="120" Grid.Row="0" ToolTip="Choose the year of the vehicle" SelectionChanged="TypeChangedEvent">
                        <ComboBoxItem>Car</ComboBoxItem>
                        <ComboBoxItem>Tricycle</ComboBoxItem>
                    </ComboBox>
                    <CheckBox x:Name="checkBoxNew" HorizontalAlignment="Left" Margin="224,234,0,0" VerticalAlignment="Top" Grid.Row="0" ToolTip="Select if the vehicle is new"/>
                    <TextBox x:Name="txtHandleBarHeight" HorizontalAlignment="Left" Margin="224,272,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Row="0" ToolTip="Enter the height of the handle bars in cm" Visibility="Hidden"/>
                    <CheckBox x:Name="checkBoxIsElectric" HorizontalAlignment="Left" Margin="224,271,0,0" VerticalAlignment="Top" Grid.Row="0" ToolTip="Select if the car is electric"/>
                    <Button Content="En_ter" HorizontalAlignment="Center" Margin="0,0,100,0" Grid.Row="1" VerticalAlignment="Center" Width="40" Click="EnterButtonClick" ToolTip="Enter the vehicle to the list"/>
                    <Button Content="_Reset" HorizontalAlignment="Center" Margin="100,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="40" Click="ResetButtonClick" ToolTip="Reset the screen and the list"/>
                </Grid>
            </TabItem>
            <TabItem Header="_Vehicle List">
                <DataGrid x:Name="vehicleList" Grid.Row="1" IsReadOnly="True" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="40*"/>
                        <DataGridCheckBoxColumn Header="New" Binding="{Binding IsNew}" Width="40*"/>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="30*"/>
                        <DataGridTextColumn Header="Make" Binding="{Binding Make}" Width="100*"/>
                        <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="100*"/>
                        <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="40*"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="60*"/>
                        <DataGridTextColumn Header="Bar Height" Binding="{Binding HandleBarHeight}" Width="60*"/>
                        <DataGridCheckBoxColumn Header="Electric" Binding="{Binding IsElectric}" Width="40*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="_Statistics">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height = "*"/>
                        <RowDefinition Height = "*"/>
                        <RowDefinition Height = "*"/>
                    </Grid.RowDefinitions>
                    
                    <Label Content="_Total Vehicles:" HorizontalAlignment="Center" Margin="0,0,200,0" VerticalAlignment="Center" Grid.Row="0" Target="{Binding ElementName=txtTotalVehicles}"/>
                    <Label Content="Total _Price:" HorizontalAlignment="Center" Margin="0,0,200,0" VerticalAlignment="Center" Grid.Row="1" Target="{Binding ElementName=txtTotalPrice}"/>
                    <Label Content="Avera_ge Price:" HorizontalAlignment="Center" Margin="0,0,200,0" VerticalAlignment="Center" Grid.Row="2" Target="{Binding ElementName=txtAvgPrice}"/>
                    <TextBox x:Name="txtTotalVehicles" IsEnabled="False" HorizontalAlignment="Center" Margin="20,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="120" Grid.Row="0" ToolTip="Total vehicles in stock"/>
                    <TextBox x:Name="txtTotalPrice" IsEnabled="False" HorizontalAlignment="Center" Margin="20,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="120" Grid.Row="1" ToolTip="Total price of all vehicles in stock"/>
                    <TextBox x:Name="txtAvgPrice" IsEnabled="False" HorizontalAlignment="Center" Margin="20,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="120" Grid.Row="2" ToolTip="Average price of all vehicles in stock"/>

                </Grid>
            </TabItem>
        </TabControl>
        
        <StatusBar Grid.Row="1"><TextBlock x:Name="txtStatusBar"/></StatusBar>
        
        <Button Content="_Exit" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Row="2" VerticalAlignment="Center" Width="40" Click="ExitButtonClick" ToolTip="Exit the program"/>
    </Grid>
</Window>
